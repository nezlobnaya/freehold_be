{
  "name": "property-manager-be",
  "version": "0.0.1",
  "description": "Making property management easy",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "start:dev": "nodemon npm run start",
    "migrate:latest": "npx knex migrate:latest",
    "seed:run": "npx knex seed:run",
    "migrate:test": "cross-env NODE_ENV=testing npx knex migrate:latest",
    "res": "npm run migrate:latest && npm run seed:run && npm run migrate:test",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Lambda-School-Labs/property-manager-be.git"
  },
  "author": "Matt Hagner",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Lambda-School-Labs/property-manager-be/issues"
  },
  "homepage": "https://github.com/Lambda-School-Labs/property-manager-be#readme",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "firebase": "^7.3.0",
    "firebase-admin": "^8.7.0",
    "helmet": "^3.21.2",
    "knex": "^0.20.1",
    "knex-cleaner": "^1.3.0",
    "moment": "^2.24.0",
    "node-gyp": "^6.0.1",
    "pg": "^7.12.1",
    "rebuild": "^0.1.2"
  },
  "devDependencies": {
    "cross-env": "^6.0.3",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-jest": "^23.0.2",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.9",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  }
}
